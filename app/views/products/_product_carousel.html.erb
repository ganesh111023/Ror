<% active = product_carousel_counter == 0 ? 'active' : '' %>

<div class="item <%= active %>">

  <% if product_carousel.primary_image %>
      <%= def_img(product_carousel, 'middle') %>
  <% else %>
      <img alt="900x500" data-src="holder.js/900x500/auto/#777:#777" src="data:image/svg+xml;base64," data-holder-rendered="true">
  <% end %>

  <div class="carousel-caption">
    <h3><%= truncate(product_carousel.title, length: 100) %></h3>
    <p><%= truncate(product_carousel.description, length: 200) %></p>
  </div>
</div>