      </div>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if active_class(admin_categories_path) %>"><%= link_to t('activerecord.models.category', :count => 0), admin_categories_path %></li>
        <li class="<%= 'active' if active_class(admin_users_path) %>"><%= link_to t('activerecord.models.user', :count => 0), admin_users_path %></li>
